<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

	<ImageButton
	    android:id="@+id/img_back"
	    android:layout_width="25dp"
	    android:layout_height="25dp"
	    android:layout_gravity="left"
	    android:layout_marginLeft="10dp"
	    android:layout_marginTop="5dp"
	    android:background="@drawable/close_button"
	    />
	
    <ImageView
        android:id="@+id/log_iwuse"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/wusetheme_unselect"
        android:contentDescription="@string/title_iwusetheme"/>

	<View android:layout_width="wrap_content" android:layout_height="0dp" />

    <EditText
        android:id="@+id/edt_userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:ems="11"
        android:hint="@string/userid"
        android:inputType="phone">
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:ems="11"
        android:hint="@string/passward"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@drawable/confirm" />
    
	<LinearLayout 
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
	 <TextView
        android:id="@+id/txt_regist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/regist"
         />
	    
    <TextView
        android:id="@+id/txt_forgetuserinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgetuserinfo"
        android:layout_marginLeft="10dp"
        />
	</LinearLayout>

	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="90dp" >

	    <ImageView
	        android:id="@+id/img_oauth_weichat"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/socialize_wechat" />

	    <ImageView
	        android:id="@+id/img_oauth_qq"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/socialize_qq_on"  />

	    <ImageView
	        android:id="@+id/img_oauth_paybao"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/sina_weibo_logo"  />

	    <ImageView
	        android:id="@+id/img_oauth_weibo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/socialize_sina_on"  />
	</LinearLayout>

</LinearLayout>